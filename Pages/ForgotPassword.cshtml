@page
@model ClassProject.Pages.ForgotPasswordModel
@{
}



<h2>بازیابی رمز عبور</h2>
<div class="row justify-content-center">
  <div class="col-md-6">
    <form method="post">
      <div class="mb-3">
        <label class="form-label">ایمیل</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل ثبت‌شده" />
      </div>
      <button type="submit" class="btn btn-primary">ارسال درخواست</button>
      @if (Model.Message != null)
      {
        <div class="alert alert-info mt-3">@Model.Message</div>
      }
    </form>
  </div>
</div>
