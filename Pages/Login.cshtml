@page
@model ClassProject.Pages.LoginModel
@{
}

<h2>ورود</h2>
<div class="row justify-content-center">
  <div class="col-md-6">
    <form method="post">
      <div class="mb-3">
        <label class="form-label">نام کاربری</label>
        <input asp-for="Username" class="form-control" placeholder="نام کاربری را وارد کنید" />
      </div>
      <div class="mb-3">
        <label class="form-label">رمز عبور</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور را وارد کنید" />
      </div>
      <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
        <label class="form-check-label">مرا به خاطر بسپار</label>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">ورود</button>
        <button type="reset" class="btn btn-secondary">پاک کردن</button>
      </div>
      <div>
        <a asp-page="/ForgotPassword">فراموشی رمز عبور</a> |
        <a asp-page="/Register">ثبت‌نام</a> |
        <a asp-page="/Index">بازگشت به خانه</a>
      </div>
      @if (Model.Message != null)
      {
        <div class="alert alert-danger mt-3">@Model.Message</div>
      }
    </form>
  </div>
</div>